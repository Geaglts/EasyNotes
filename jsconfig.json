{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "styles": ["styles/*"],
      "components": ["components/*"],
      "containers": ["containers/*"],
      "hooks": ["hooks/*"],
      "pages": ["pages/*"],
      "routes": ["routes/*"],
      "assets": ["assets/*"],
      "utils": ["utils/*"],
      "actions": ["actions/*"],
      "reducers": ["reducers/*"],
      "schemas": ["schemas/*"],
      "context": ["context/*"],
      "storage": ["storage/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
